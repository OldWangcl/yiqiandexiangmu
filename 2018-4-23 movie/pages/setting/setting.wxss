/* pages/setting/setting.wxss */
page{
  background-color: #DF7575;
}
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 45vh;
  
}
.category-item{
  margin-top: 40rpx;
  width: 100%;
  border-top:1rpx solid #d9d9d9;
  border-bottom:1rpx solid #d9d9d9;
  background-color: #fff;
}
.presonal-info{
  display: flex;
  height: 150rpx;
  padding: 20rpx 0;
}
.user-avatar{
  height: 150rpx;
  width: 150rpx;
  position: relative;
  margin: 0 30rpx;
}
.user-avatar image{
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}
.user-name{
   margin-left: 30rpx;
   flex: 1;
   padding-top: 35rpx;
   font-size: 30rpx;
}
.user-location{
  margin-top: 15rpx;
}
.device-item{
  margin-top: 40rpx;
  width: 100%;
  border-top:1rpx solid #7F8389;
  border-bottom:1rpx solid #7F8389;
  background-color: #DF7575;
}
.detail-item{
  display: flex;
  height: 85rpx;
  padding-left: 30rpx;
  align-items: center;
  border-bottom: 1rpx solid #7F8389;
}
.detail-item image{
  height: 40rpx;
  width: 40rpx;
  margin-right: 20rpx;
}
.detail-item:last-child{
  border-bottom: none;
}
.detail-item text{
  font-size: 26rpx;
  color: #000;
}