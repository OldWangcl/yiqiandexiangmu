/* pages/movie/movie.wxss */
@import 'movie-list/movie-list-tpl.wxss';
@import 'movie-grid/movie-grid-tpl.wxss';

/*轮播图样式 start  */

swiper {
  width: 750rpx;
  height: 350rpx;
}

swiper image {
  width: 750rpx;
  height: 350rpx;
}

/*轮播图样式 end  */

/*电影详情样式 start */

.container {
  background-color: #df7575;
}

.movie-template {
  margin-bottom: 30rpx;
}

/*电影详情样式 end */

/*搜索样式 start*/

.search {
  background-color: #f2f2f2;
  height: 85rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.QR{
  width: 110rpx;
  height: 70rpx;
}
.search-img {
  margin: auto 0 auto -20rpx;
}
.search input{
  height: 100%;
  width: 600rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
}
.placeholder{
  font-size: 28rpx;
  color: #d1d1d1;
  /* margin-left: 20rpx; */
}
.search-panel{
  position: absolute;
  top: 80rpx;
}
.image{
  width: 80rpx;
  height: 85rpx;
  line-height: 92rpx;
}
.xx-img{
  height: 30rpx;
  width: 30rpx;
  margin: auto 0 auto 10rpx;
}

/*搜索样式 end*/
