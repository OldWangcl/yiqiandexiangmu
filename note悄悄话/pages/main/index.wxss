/* pages/main/index.wxss */
page{
  background-color: #D56C53;
}
.btn{
  margin-top: 30rpx;
  margin-left: 40rpx;
}
.btn text{
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #fff;
  border: 2px solid #fff;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  border-top-right-radius: 30rpx;
}
.say{
  display: flex;
  flex-direction: row;
  margin-top: 100rpx;
  float: right;
  align-items: center;
}
.border{
  margin-right: 30rpx;
  border: 1rpx solid #000;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  background-color: #fff;
}
.say image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
  border: 1rpx solid #000;
  border-radius: 10rpx;
  overflow: hidden;
}
.say .head{
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
  border: 1rpx solid #000;
  border-radius: 10rpx;
  overflow: hidden;
}
.cl{
  clear: both;
}
.comment{
  margin-top: 150rpx;
  border: 1rpx solid #fff;
  width:100%;
  height: 500rpx;
  position: relative;
}
/*循环列表 start  */
.swiper{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}
.swiper-hid{
  width: 80rpx;
  height: 80rpx;
  border: 2rpx solid #fff;
  margin-left: 40rpx;
  border-radius: 10rpx;
  background-color: red;
}
.swiper-hid text{
  text-align: center;
  margin: 15rpx 20rpx;
  display: block;
}
.swiper-border{
  margin-left: 30rpx;
  border: 1rpx solid #000;
  border-radius: 10rpx;
  padding: 20rpx 20rpx;
  font-size: 28rpx;
  background-color: #fff;
}
/*循环列表 end  */
/*图片图标 start */
.img{
  position: absolute;
  bottom: 60rpx;
  right: 50rpx;
}
.img image{
  width: 100rpx;
  height: 100rpx;
  animation: myfirst 1.5s infinite;
}
@keyframes myfirst{
  0%{
    transform: translate(0rpx, 0rpx);
  }
  50%{
    transform:translate(0rpx, -30rpx);
  }
  100%{
    transform: translate(0rpx, 0rpx);
  }
}
/*图片图标 end */
.send{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 40rpx;
}
.hid{
  width: 80rpx;
  height: 80rpx;
  border: 2rpx solid #fff;
  margin-left: 40rpx;
  border-radius: 10rpx;
  background-color: red;
}
.hid text{
  text-align: center;
  margin: 15rpx 20rpx;
  display: block;
}
.hid-text{
  width: 415rpx;
  height: 70rpx;
  background-color: #7D4D40;
  margin: 0 30rpx;
  border-radius: 15rpx;
}
.button{
  width: 115rpx;
  height: 70rpx;
  font-size: 28rpx;
  text-align: center;
}
.two-btn{
  margin-top: 60rpx;
  display: flex;
  flex-direction: row;
}
.sends{
  width: 130rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}
button[plain]{
   width: 185rpx;
  /* padding: 10rpx 10rpx; */
  font-size: 28rpx;
  color: #fff;
  line-height: 60rpx;
  border: 2px solid #fff;
  margin-left: 80rpx;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  border-top-right-radius: 30rpx;
}
.dog{
  width: 185rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #D56C53;
  border: 2px solid #fff;
  margin-right: 90rpx;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  border-top-right-radius: 30rpx;
  
}

@keyframes rowup {
     0% {
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0);
    } 
    100% {
        -webkit-transform: translate3d(0, -260px, 0);
        transform: translate3d(0, -260px, 0);
    }
}

.list{
    width: 700rpx;
    /* border: 1px solid #999; */
    margin: 10rpx 0;
    position: relative;
    height: 480rpx;
    overflow: hidden;
    font-size: 15px;
    font-family: 'Microsoft Yahei';
}

.list .rowup{
    -webkit-animation: 10s rowup linear infinite normal;
    animation: 5s rowup linear infinite normal;
    position: relative;
}
